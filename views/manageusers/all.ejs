<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<!-- Creates the menu and also creates buttons to filter through users -->
<div class="d-flex justify-content-between">
    <a href="/account" class="btn btn-danger mb-5">Return to Menu</a>
    <div class="">
        <a href="/manageusers/?permLvl=1" class="btn btn-secondary mb-5">Customer</a>
        <a href="/manageusers/?permLvl=2" class="btn btn-secondary mb-5">Staff</a>
        <a href="/manageusers/?permLvl=3" class="btn btn-secondary mb-5">Owner</a>
        <a href="/manageusers/" class="btn btn-success mb-5">All</a>
    </div>
</div>
<div class="row">
    <!-- Loop through all the users and display them in a card -->
    <% for (let user of users) { %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-5 align-center">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                    <%= user.name %>
                </h5>
                <p class="card-text">
                    <%= user.email %>
                </p>
                <a href="/manageusers/<%= user.id %>" class="btn btn-primary">Manage</a>
            </div>
        </div>
    </div>
    <% } %>
</div>