<%- include("partials/head", {title: "Home Page" }) %>
    <main class="container">
        <h1 class="display-3 mb-3">Home Page!</h1>
        <div class="row">
            <h2 class="display-5">Categories</h2>
            <% for (let category of categories) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-5 align-center">
                    <div class="card h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                <%= category.name %>
                            </h5>
                            <p class="card-text">
                                <%= category.description %>
                            </p>
                            <a href="/categories/<%= category.id %>" class="btn btn-outline-primary mt-auto">View
                                Products</a>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
        <div class="row">
            <h2 class="display-5">Products</h2>
            <% for (let product of products) { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-5 align-center">
                    <div class="card h-100">
                        <% if (product.images[0]) { %>
                            <img src="<%= product.images[0] %>" class="card-img-top">
                            <% } %>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title">
                                        <%= product.name %>
                                    </h5>
                                    <h6><b>Â£<%= product.price %></b>
                                    </h6>
                                    <p class="card-text">
                                        <%= product.description %>
                                    </p>
                                    <a href="#" class="btn btn-outline-primary mt-auto addProduct"
                                        id="<%= product.id %>">Add to Cart</a>
                                </div>
                    </div>
                </div>
                <% } %>
        </div>

    </main>

    <script src="/js/cartManager.js"></script>
    </body>

    </html>