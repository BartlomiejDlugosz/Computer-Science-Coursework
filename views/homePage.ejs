<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<!-- Displays a title -->
<h1 class="display-3 mb-3">Home Page!</h1>
<div class="row">
    <h2 class="display-5">Categories</h2>
    <!-- Loops through all the categories provided in an array and renders a card for each one -->
    <% for (let category of categories) { %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-5 align-center">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <!-- The name and description are filled in and the button is routed to the right page -->
                <h5 class="card-title">
                    <%= category.name %>
                </h5>
                <p class="card-text">
                    <%= category.description %>
                </p>
                <a href="/categories/<%= category.id %>" class="btn btn-outline-primary mt-auto">View
                    Products</a>
            </div>
        </div>
    </div>
    <% } %>
</div>
<div class="row">
    <!-- The information for the products is passed onto the template, this is to reduce code repetition and improve consistency -->
    <h2 class="display-5">Products</h2>
    <%- include("./partials/products") %>
</div>