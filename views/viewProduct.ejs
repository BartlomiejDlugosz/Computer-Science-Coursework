<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-between">
    <a href="javascript:window.history.back()" class="btn btn-danger mb-5">Return to Products</a>
</div>
<div class="order-info pb-5">
    <h3>Product Info</h3>
    <div class="row">
        <p class="col"><%= product.name %></p>
    </div>
    <div class="row">
        <p class="col"><%= product.description %></p>
    </div>
    <div class="row">
        <p class="col"><%= product.discount ? product.discountedPrice : product.price %></p>
    </div>
    <div class="row">
        <a href="/cart/add/<%= product.id %>" class="btn btn-success"></a>
    </div>
</div>