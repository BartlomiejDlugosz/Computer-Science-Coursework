<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-between">
    <a href="/account" class="btn btn-danger mb-5">Return to Menu</a>
    <a href="/manageproducts/new" class="btn btn-success mb-5">New Product</a>
</div>
<div class="row">
    <!-- Loops through all the products and fills in the relevant information -->
    <% for (let product of products) { %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-5 align-center">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                    <%= product.name %>
                </h5>
                <!-- Displays the correct price based on whether there's a discount -->
                <% if (product.discount) { %>
                <b><s style="color: red;">£<%= product.price %></s></b>
                <h6><b>£<%= product.discountedPrice %></b></h6>
                <% } else { %>
                <h6><b>£<%= product.price %></b></h6>
                <% } %>
                <p class="card-text">
                    <%= product.briefDescription || product.description %>
                </p>
                <a href="/manageproducts/<%= product.id %>" class="btn btn-outline-primary mt-auto">Manage</a>
            </div>
        </div>
    </div>
    <% } %>
</div>