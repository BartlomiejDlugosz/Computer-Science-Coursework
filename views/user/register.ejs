<% layout("layouts/boilerplate") %>
<form action="/register" method="POST" class="mb-5 needs-validation" novalidate>
    <div class="form-group row mb-3">
        <label for="name" class="col-form-label col-sm-2">Name*:</label>
        <div class="col-sm-10">
            <input type="text" name="user[name]" id="name" class="form-control" placeholder="Name" required>
            <div class="invalid-feedback">
                Please enter your name
            </div>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="phone" class="col-form-label col-sm-2">Phone number:</label>
        <div class="col-sm-10">
            <input type="tel" name="user[phone]" id="phone" class="form-control" placeholder="Phone number">
            <div class="invalid-feedback">
                Please enter a valid phone number
            </div>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label for="email" class="col-form-label col-sm-2">Email*:</label>
        <div class="col-sm-10">
            <input type="email" name="user[email]" id="email" class="form-control" placeholder="Email" required>
            <div class="invalid-feedback">
                Please enter a valid email
            </div>
        </div>
    </div>
    <div class="form-group row mb-3">
        <label for="password" class="col-form-label col-sm-2">Password*:</label>
        <div class="col-sm-10">
            <input type="password" name="user[password]" id="password" class="form-control" placeholder="Password" min=6
                required>
            <div class="invalid-feedback">
                Please enter a password
            </div>
        </div>
    </div>

    <button class="btn btn-success form-control">Register</button>
</form>

