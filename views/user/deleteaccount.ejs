<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-between">
    <a href="/account" class="btn btn-danger mb-5">Return to Menu</a>
</div>
<!-- Displays a warning -->
<div class="alert alert-warning" role="alert">
    <h1 class="alert-heading">Warning!</h1>
    <p>Deleting your account is irreversible and all data (including orders) will be deleted. If you have any pending
        orders then you won't
        be able to delete your account until they have been fulfilled. Please enter your password to continue</p>
</div>
<!-- Creates a form for the user to submit their password and delete their account -->
<form action="/user/deleteaccount" method="POST" class="mb-5 needs-validation" novalidate>
    <div class="form-group row mb-3">
        <label for="password" class="col-form-label col-sm-2">Password*:</label>
        <div class="col-sm-10">
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
            <div class="invalid-feedback">
                Please enter a valid password
            </div>
        </div>
    </div>
    <!-- Submits the form -->
    <button class="btn btn-danger form-control">Delete</button>
</form>