<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-between">
    <a href="/account" class="btn btn-danger mb-5">Return to Menu</a>
</div>
<!-- Creates a form for the user to submit a form to change the users password -->
<form action="/user/changepassword" method="POST" class="mb-5 needs-validation" novalidate>
    <div class="form-group row mb-3">
        <!-- Creates a field for the user to enter their current password -->
        <label for="currentPassword" class="col-form-label col-sm-2">Current Password*:</label>
        <div class="col-sm-10">
            <input type="password" name="currentPassword" id="currentPassword" class="form-control"
                placeholder="Current password" required>
            <div class="invalid-feedback">
                Please enter a valid password
            </div>
        </div>
    </div>

    <!-- Creates a field for the user to enter their new password -->
    <div class="form-group row mb-3">
        <label for="newPassword" class="col-form-label col-sm-2">New Password*:</label>
        <div class="col-sm-10">
            <input type="password" name="newPassword" id="newPassword" class="form-control" placeholder="New password"
                required>
            <div class="invalid-feedback">
                Please enter a valid password
            </div>
        </div>
    </div>
    <!-- Submits the form -->
    <button class="btn btn-primary form-control">Save</button>
</form>