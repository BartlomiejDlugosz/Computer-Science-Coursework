<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<div class="d-flex justify-content-between">
    <a href="/account" class="btn btn-danger mb-5">Return to Menu</a>
</div>
<div class="row">
    <!-- Shows a message if there are no orders -->
    <% if (user.orders.length === 0) { %>
    <p class="lead">You don't have any orders to view</p>
    <% } %>
    <!-- Loops through all the orders and displays a card for them with the date and address -->
    <% for (let order of user.orders) { %>
    <div class="col-lg-3 col-md-4 col-sm-6 mb-5 align-center">
        <div class="card h-100">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">
                    <%= order.date.toLocaleString("en-UK") %>
                </h5>
                <p class="card-text">
                    <%= order.address.line1 %> <br>
                    <%= order.address.city %> <br>
                    <%= order.address.postal_code %>
                </p>
                <!-- Links the view button to the show page -->
                <a href="/user/orders/<%= order.id %>" class="btn btn-primary">View</a>
            </div>
        </div>
    </div>
    <% } %>
</div>