<!-- Uses the boilerplate template to prevent code repetition and improve consistency -->
<% layout("layouts/boilerplate") %>
<!-- Creates a form where the search query will be submitted to -->
<form action="/searchproduct" method="GET" class="mb-5 needs-validation" novalidate>
    <div class="form-group row mb-3">
        <label for="query" class="col-form-label col-sm-2">Search:</label>
        <div class="col-sm-8">
            <input type="text" name="query" id="query" class="form-control" placeholder="Search..." required>
            <div class="invalid-feedback">
                Please enter some text
            </div>
        </div>
        <!-- Creates a button that submits the form -->
        <div class="col-sm-2">
            <button class="btn btn-primary form-control">Search</button>
        </div>
    </div>
</form>